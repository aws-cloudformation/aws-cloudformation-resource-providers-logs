{
    "typeName": "AWS::Logs::Destination",
    "description": "Resource schema for AWS::Logs::Destination.",
    "sourceUrl": "https://github.com/aws-cloudformation/aws-cloudformation-resource-providers-logs.git",
    "properties": {
        "DestinationName": {
            "description": "The name of the destination.",
            "type": "string",
            "pattern": "^[^:*]{1,512}\\Z",
            "minLength": 1,
            "maxLength": 512
        },
        "DestinationPolicy": {
            "description": "An IAM policy document that governs which AWS accounts can create subscription filters against this destination.",
            "type": "string",
            "minLength": 1
        },
        "RoleArn": {
            "description": "The ARN of an IAM role that permits CloudWatch Logs to send data to the specified AWS resource.",
            "type": "string",
            "pattern": "^arn:[a-z-]+:[a-z-]+:(([a-z]+-)+[0-9])?:([0-9]{12})?:[^.]+\\Z"
        },
        "TargetArn": {
            "description": "The Amazon Resource Name (ARN) of the physical target to where the log events are delivered (for example, a Kinesis stream).",
            "type": "string",
            "pattern": "^arn:[a-z-]+:[a-z-]+:(([a-z]+-)+[0-9])?:([0-9]{12})?:[^.]+\\Z"
        }
    },
    "required": [
        "DestinationName",
        "DestinationPolicy",
        "RoleArn",
        "TargetArn"
    ],
    "createOnlyProperties": [
        "/properties/DestinationName"
    ],
    "primaryIdentifier": [
        "/properties/DestinationName"
    ],
    "handlers": {
        "create": {
            "permissions": [
                "PutDestination",
                "PutDestinationPolicy",
                "DescribeDestinations"
            ]
        },
        "read": {
            "permissions": [
                "DescribeDestinations"
            ]
        },
        "update": {
            "permissions": [
                "PutDestination",
                "PutDestinationPolicy",
                "DescribeDestinations"
            ]
        },
        "delete": {
            "permissions": [
                "DeleteDestination"
            ]
        },
        "list": {
            "permissions": [
                "DescribeDestinations"
            ]
        }
    },
    "additionalProperties": false
}
