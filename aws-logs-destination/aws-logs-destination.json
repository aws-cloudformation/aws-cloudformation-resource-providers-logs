{
    "typeName": "AWS::Logs::Destination",
    "description": "Schema for AWS Logs Destination resource.",
    "sourceUrl": "git@github.com:aws-cloudformation/aws-cloudformation-rpdk.git",
    "properties": {
        "DestinationName": {
            "type": "string",
            "pattern": "^[^:*]*\\Z",
            "minLength": 1,
            "maxLength": 512
        },
        "DestinationPolicy": {
            "type": "string",
            "minLength": 1
        },
        "RoleArn": {
            "type": "string",
            "minLength": 1
        },
        "TargetArn": {
            "type": "string",
            "minLength": 1
        }
    },
    "required": [
        "DestinationName",
        "DestinationPolicy",
        "RoleArn",
        "TargetArn"
    ],
    "createOnlyProperties": [
        "/properties/DestinationName"
    ],
    "primaryIdentifier": [
        "/properties/DestinationName"
    ],
    "handlers": {
        "create": {
            "permissions": [
                "PutDestination",
                "PutDestinationPolicy",
                "DescribeDestinations"
            ]
        },
        "read": {
            "permissions": [
                "DescribeDestinations"
            ]
        },
        "update": {
            "permissions": [
                "PutDestination",
                "PutDestinationPolicy",
                "DescribeDestinations"
            ]
        },
        "delete": {
            "permissions": [
                "DeleteDestination"
            ]
        },
        "list": {
            "permissions": [
                "DescribeDestinations"
            ]
        }
    }
}
