{
    "typeName": "AWS::Logs::LogStream",
    "description": "Schema for the AWS CloudWatch Logs LogStream resource.",
    "sourceUrl": "git@github.com:aws-cloudformation/aws-cloudformation-resource-providers-logs.git",
    "properties": {
        "LogStreamName": {
            "description": "The name of the log stream. The name must be unique within the log group.",
            "type": "string",
            "minLength": 1,
            "maxLength": 512,
            "pattern": "^[^:*]*\\Z"
        },
        "LogGroupName": {
            "description": "The name of the log group where the log stream is created.",
            "type": "string",
            "minLength": 1,
            "maxLength": 512,
            "pattern": "^[\\.\\-_/#A-Za-z0-9]+\\Z"
        }
    },
    "required": [
        "LogGroupName"
    ],
    "createOnlyProperties": [
        "/properties/LogStreamName",
        "/properties/LogGroupName"
    ],
    "primaryIdentifier": [
        "/properties/LogGroupName",
        "/properties/LogStreamName"
    ],
    "handlers": {
        "create": {
            "permissions": [
                "logs:CreateLogStream",
                "logs:DescribeLogStreams"
            ]
        },
        "read": {
            "permissions": [
                "logs:DescribeLogStreams"
            ]
        },
        "update": {
            "permissions": [
                "logs:DescribeLogStreams"
            ]
        },
        "delete": {
            "permissions": [
                "logs:DeleteLogStream",
                "logs:DescribeLogStreams"
            ]
        },
        "list": {
            "permissions": [
                "logs:DescribeLogStreams"
            ]
        }
    }
}
